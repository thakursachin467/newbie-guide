<div class="row ">
  <div class="col s12 ">
    <nav>
    <div class="nav-wrapper indigo darken-2">
      <a style="margin-left: 20px;" class="breadcrumb" >{{userid.firstname}} {{userid.lastname}}</a>
      <a class="breadcrumb" href="/dashboard">Dashboard</a>
      <a class="breadcrumb" >Gallery</a>




    <a class="right " style="margin-right: 20px;" href="/gallery/upload"><i class="fa fa-refresh" style="font-size:26px;">Refresh</i> </a>


    </div>
  </nav>
  </div>
</div>

<div class = "row">
        <form class = "col s6" method="post" action="/upload"  enctype="multipart/form-data">
           <div class = "row">
              <label>Materialize File Input</label>
              <div class = "file-field input-field">
                 <div class = "btn">
                    <span>Browse</span>
                    <input type = "file" name="FileUpload"  />
                 </div>

                 <div class = "file-path-wrapper">
                    <input class = "file-path validate"  type = "text"
                       placeholder = "Upload file" />
                 </div>
                 <button class="btn waves-effect waves-light" type="submit" value="submit">Submit</button>
              </div>
           </div>

        </form>

     </div>
     <div class="row">
       <hr>
       <h4 class="center">All Images</h4>
       <hr>

       {{#if files}}
       <div class="row">
         {{#each files}}
          <div class="col s12 m3">
             <div class="card" >
               <div class="card-image "  >
                 <img  class="responsive-img materialboxed" src="image/{{filename}}" style="height:300px;">

               </div>
                 <div class="card-action">
                   <form action="/file/{{_id}}?_method=DELETE" method="post" id="delete-form">
                     <input type="hidden" name="_method" value="DELETE">
                     <button type="submit" name="button" class="btn red"><i class="fa fa-remove"></i>Delete</button>
                   </form>
                 </div>
               </div>
               </div>
         {{/each}}
     </div>
       {{else}}
         {{files}}
       <p>No Images To Show</p>
       {{/if}}

     </div>
